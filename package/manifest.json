{
  "manifest_version": 3,
  "name": "Biketerra Gradient Colors",
  "version": "2.0.2",
  "description": "Replaces Biketerra elevation graph colors with Veloviewer-inspired gradient coloring",
  "permissions": ["storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "host_permissions": ["https://biketerra.com/*"],
  "content_scripts": [
    {
      "matches": ["https://biketerra.com/spectate/*", "https://biketerra.com/ride*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
