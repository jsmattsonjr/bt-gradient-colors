{
  "manifest_version": 3,
  "name": "Biketerra Gradient Colors",
  "version": "1.0",
  "description": "Replaces Biketerra elevation graph colors with Veloviewer-style gradient coloring",
  "permissions": [],
  "host_permissions": [
    "https://biketerra.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://biketerra.com/spectate/*",
        "https://biketerra.com/ride*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}